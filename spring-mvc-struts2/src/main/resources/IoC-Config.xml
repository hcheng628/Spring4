<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="us.supercheng.spring4.spring.springmvc.struts2"></context:component-scan>

    <bean id="product" class="us.supercheng.spring4.spring.springmvc.struts2.entity.Product">
        <property name="brand" value="illy"></property>
        <property name="name" value="Dark Roasted"></property>
    </bean>

</beans>